<%@ include file="templates/header.jsp"%>

<%@ include file="templates/navbar.jsp"%>


<div class="container">

	<div class="large-content" style="height: 100%">
		<div class="row">
			<div class="col-lg-5">
				<div class="text-left feature">
					<a href="#"></a>
					<h3 class="padding header emerald">New Habit</h3>
				</div>
			</div>
			<div class="col-lg-6 col-lg-offset-1">
				<h3 style="color: black" class="padding header">
						<span style="color: #E74C3C">F</span> 5/16/14
					</h3>
			</div>
		</div>

		<!-- Header for first habit box. -->
		<div class="row">
			<div class="col-lg-12">
				<h3 class="padding wet-asphalt header">Stay Hydrated</h3>
			</div>
		</div>

		<div class="goal-body">
			<!-- Current streak. -->
			<div class="row">
				<div class="col-lg-6">
					<h4 class="padding clouds header follower">Current Streak</h4>
				</div>
				<div class="col-lg-6">
					<h4 class="padding clouds header follower" style="color: #F39C12">4
						Days</h4>
				</div>
			</div>
			<!-- Current progress bar. -->
			<div class="row">
				<div class="col-lg-12">
					<div class="padding header follower clouds">
						<div
							style="border-radius: 4px; background-color: white; color: transparent">
							<div class="meter"
								style="background-color: #3498DB; width: 13%; border-radius: 4px">.</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Best streak. -->
			<div class="row" style="margin-top: 0px">
				<div class="col-lg-6">
					<h4 class="padding clouds header follower">Best Streak</h4>
				</div>
				<div class="col-lg-6">
					<h4 class="padding clouds header follower" style="color: #2ECC71">12
						Days</h4>
				</div>
			</div>
			<!-- Best progress bar. -->
			<div class="row">
				<div class="col-lg-12">
					<div class="padding header follower clouds"
						style="padding-bottom: 30px">
						<div
							style="border-radius: 4px; background-color: white; color: transparent">
							<div class="meter"
								style="background-color: #2ECC71; width: 40%; border-radius: 4px">.</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Completion and view more. -->
			<div class="row">
				<div class="col-lg-2 feature text-center">
					<a href="#"></a>
					<h4 class="padding emerald header follower">Complete</h4>
				</div>
				<div class="col-lg-2 feature text-center">
					<a href="#"></a>
					<h4 class="padding river header follower">View More</h4>
				</div>
			</div>
		</div>


		<!-- Header for second habit box. -->
		<div class="row">
			<div class="col-lg-12">
				<h3 class="padding wet-asphalt header">Running</h3>
			</div>
		</div>

		<!-- Image. -->
		<div class="row">
			<div class="col-lg-12">
				<img class="img-responsive" src="images/Graph.png"></img>
			</div>
		</div>


		<!-- Completion and view more. -->
		<div class="row">
			<div class="col-lg-2 feature">
				<a href="#"></a>
				<h4 class="padding emerald header follower text-center">Complete</h4>
			</div>
			<div class="col-lg-2 feature">
				<a href="#"></a>
				<h4 class="padding river header follower text-center">View More</h4>
			</div>
		</div>

	</div>

</div>

</body>

</html>